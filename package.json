{
  "name": "@desknizer/base",
  "private": true,
  "scripts": {
    "dev": "lerna run start --scope @desknizer/app --scope @desknizer/settings --scope '@desknizer-extension/*' --parallel --stream",
    "rebuild": ".\\node_modules\\.bin\\electron-rebuild.cmd -f -w ./node_modules/better-sqlite3",
    "build": "lerna run build --scope @desknizer/app --scope @desknizer/settings --scope '@desknizer-extension/*' --stream",
    "publish": "lerna run build --scope @desknizer/settings --scope '@desknizer-extension/*' && lerna run publish --scope @desknizer/app",
    "start:app": "yarn workspace @desknizer/app start",
    "start:server": "yarn workspace @desknizer/server dev",
    "extension:dev": "lerna run dev --scope '@desknizer-extension/*' --parallel"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^8.1.8"
  },
  "packageManager": "yarn@4.5.1"
}
