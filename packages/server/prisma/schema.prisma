// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  userName      String
  extensions    Extension[]
  ExtensionItem ExtensionItem[]
  Widget        Widget[]
}

model Extension {
  id             Int             @id @default(autoincrement())
  userId         Int?
  User           User?           @relation(fields: [userId], references: [id])
  name           String
  description    String
  enabled        Boolean
  meta           String
  extensionItems ExtensionItem[]
  Widget         Widget[]
}

model ExtensionItem {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  extensionId Int?
  Extension   Extension? @relation(fields: [extensionId], references: [id])
  data        String
  Widget      Widget[]
}

model Widget {
  id              Int           @id @default(autoincrement())
  extensionId     Int
  extension       Extension     @relation(fields: [extensionId], references: [id])
  extensionItemId Int
  extensionItem   ExtensionItem @relation(fields: [extensionItemId], references: [id])
  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  x               Int
  y               Int
  width           Int
  height          Int
}
